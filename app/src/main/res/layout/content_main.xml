<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    android:background="#d6106c"
    tools:showIn="@layout/activity_main">

<LinearLayout
    android:layout_width="fill_parent"
    android:id="@+id/relativeLayout"
    android:gravity="center_vertical|center_horizontal"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="110dp"
        android:text="Player A"
        android:id="@+id/playerAButton"
        android:rotation="180"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:onClick="playerAClicked"
        android:textSize="30dp"
        android:background="#d6eb1a"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:text="player A answers"
        android:id="@+id/playerAANswers"
        android:rotation="180"
        android:layout_below="@+id/playerAButton"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="20dp"
        android:textColor="#111111"
        android:background="#19e1f7" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="Player A text"
        android:id="@+id/playerATextView"
        android:rotation="180"
        android:gravity="center_vertical|center_horizontal"
        android:layout_below="@+id/playerAButton"
        android:layout_alignParentStart="true"

        android:textColor="#111111"
        android:textSize="20dp" />

    <TextView
        android:layout_width="80dp"
        android:layout_height="45dp"
        android:id="@+id/playerAScore"
        android:rotation="180"
        android:gravity="center_horizontal|center_vertical"
        android:textSize="35dp"
        android:textColor="#111111"
        android:layout_gravity="center_horizontal" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/playerATextView"
        android:layout_gravity="center_vertical|center_horizontal"
        android:background="#c0c0c0"/>


    <TextView
        android:layout_width="80dp"
        android:layout_height="45dp"
        android:text=""
        android:gravity="center_horizontal|center_vertical"
        android:id="@+id/playerBScore"
        android:textColor="#111111"
        android:textSize="35dp"
        android:layout_gravity="center_horizontal"/>


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="Player B text"
        android:id="@+id/playerBTextView"
        android:gravity="center_vertical|center_horizontal"
        android:layout_below="@+id/playerATextView"
        android:layout_marginTop="10dp"
        android:layout_alignParentStart="true"
        android:textColor="#111111"
        android:textSize="20dp" />


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:text="player B answers"
        android:id="@+id/playerBAnswers"
        android:layout_below="@+id/playerBTextView"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#111111"
        android:textSize="20dp"
        android:background="#19e1f7" />


    <Button
        android:layout_width="fill_parent"
        android:layout_height="110dp"
        android:text="Player B"
        android:id="@+id/playerBButton"
        android:layout_below="@+id/playerBAnswers"
        android:layout_centerHorizontal="true"
        android:onClick="playerBClicked"
        android:textSize="30dp"
        android:background="#d6eb1a"/>



    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
       android:layout_centerHorizontal="true"
        android:background="#7c7474"
        android:orientation="vertical"
        android:id="@+id/layout"
        android:visibility="invisible">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:text="GAME OVER!!!"
            android:textColor="#111111"
            android:id="@+id/textGameOver"
            android:layout_marginTop="30dp"
            android:background="#d31353"
            android:textSize="30dp"
            android:gravity="center_vertical|center_horizontal" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:text=""
            android:background="#d31353"
            android:id="@+id/result"
            android:textColor="#111111"
            android:textSize="20dp"
            android:layout_below="@+id/textGameOver"
            android:layout_alignParentStart="true"
            android:gravity="center_vertical|center_horizontal" />
        <Button
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Play AGain"
            android:id="@+id/playAgain"
            android:onClick="playAgain"
            android:textSize="30dp"
            android:background="#a31ca1"
            android:textColor="#111111"
            android:gravity="center_vertical|center_horizontal"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />


    </RelativeLayout>

</RelativeLayout>
